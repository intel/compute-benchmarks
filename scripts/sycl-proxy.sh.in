# substitute first argument with SYCL compiler name
# if compiler is acpp or the command line contains -fsycl,
# otherwise run as is

set -e

if [[ "@SYCL_COMPILER@" == "acpp" || " $@ " =~ .*\ -fsycl\ .* ]]; then
    @SYCL_COMPILER@ "${@:2}"
else
    "$@"
fi
